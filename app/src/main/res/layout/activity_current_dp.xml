<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentDpActivity"
    android:background="@drawable/gradient_bg"
    android:screenOrientation="portrait">

    <ImageView
        android:id="@+id/currentDp_dp_imageView"
        android:layout_width="0dp"
        android:layout_height="370dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentdp_set_textView"
        app:srcCompat="@drawable/image_dafault_dp" />

    <ImageView
        android:id="@+id/currentDp_addPhoto_imageViewButton"
        android:layout_width="67dp"
        android:layout_height="56dp"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/currentDp_dp_imageView"
        app:layout_constraintEnd_toEndOf="@+id/currentDp_dp_imageView"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/currentDp_dp_imageView"
        app:layout_constraintTop_toTopOf="@+id/currentDp_dp_imageView"
        app:layout_constraintVertical_bias="0.078"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/currentdp_set_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/change_current_dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <Button
        android:id="@+id/currentDp_change_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:text="@string/change_dp"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentDp_dp_imageView"
        app:layout_constraintVertical_bias="0.26999998" />

    <ProgressBar
        android:id="@+id/currentAcc_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/currentDp_dp_imageView"
        app:layout_constraintEnd_toEndOf="@+id/currentDp_dp_imageView"
        app:layout_constraintStart_toStartOf="@+id/currentDp_dp_imageView"
        app:layout_constraintTop_toBottomOf="@+id/currentDp_addPhoto_imageViewButton"
        app:layout_constraintVertical_bias="0.19" />

</androidx.constraintlayout.widget.ConstraintLayout>